        <yield><![CDATA[
          <!--[if lt IE 10]>
            <script type="text/javascript" src="{%= CurrentADC.URLTo("share/es5-shim.min.js") %}"></script>
          <![endif]-->
        ]]></yield>
      </content>
      <content fileName="fontello-ie7.css" type="css" mode="static" position="head">
